<page paging="true" nocache="false" rifoptimize="false" output-encoding="UTF-8">

    <external file="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="script"/>
    <external file="jquery.jtweetsanywhere-1.3.1.min.js" type="script"/>
    <external file="jtweetsanywhere-de-1.3.1.min.js" type="script"/>
    <external file="http://platform.twitter.com/anywhere.js?id=APIKey&amp;v=1" type="script"/>
    <external file="jquery.jtweetsanywhere-1.3.1.css" type="css"/>
      
    
    <container>
        <column>
            <TEXT>
                <richtext id="tweet" class="">jTweetsAnywhere!</richtext>
            </TEXT>
        </column>
    </container>
    
    <script>
        <preserve>
<![CDATA[

    $(document).ready(function(){
    $('#tweet').jTweetsAnywhere({
        username: ['CBS', 'CSI_CBS', 'HIMYM_CBS'],
        count: 10,
        showTweetFeed: {
            showProfileImages: true,
            showUserScreenNames: true,
            showUserFullNames: true,
            showActionReply: true,
            showActionRetweet: true,
            showActionFavorite: true,
            showTwitterBird: true,
            paging: {
            mode: 'more'            
            },
            autorefresh: {
            mode: 'auto-insert',
            interval: 30
            }
        }

    });
});
]]>
        </preserve>
    </script>

</page>